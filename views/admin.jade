doctype html
html
  head
    title= "Not the Binder!"
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet' href='http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
    script( src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    script( src='/javascripts/bootstrap.js' )
  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-
          expanded='false', aria-controls='navbar')
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Not the Binder!
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            if user
              li(class=(title == 'Add User' ? 'active' : ''))
                a(href='/admin/adduser') Add User
              li(class=(title == 'Display User' ? 'active' : ''))
                a(href='/admin/displayusers') Display Users
              li(class=(title == 'Add Case' ? 'active' : ''))
                a(href='/admin/addcase') Add Case
              li(class=(title == 'Display Case' ? 'active' : ''))
                a(href='/admin/displaycases') Display Cases
          if user
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/users/logout') Logout
    .container
      != messages()
      block content
